# SalonHub Frontend - Environment Variables
# Copy this file to .env.local and update values as needed

# ============================================
# API Configuration
# ============================================

# Gateway URL (Development)
VITE_GATEWAY_URL=http://localhost:8862/api

# Gateway URL (Production)
# VITE_GATEWAY_URL=https://api.yourdomain.com/api

# ============================================
# Feature Flags
# ============================================

# Enable dummy authentication (remove for production)
VITE_USE_DUMMY_AUTH=false

# Enable dummy salon data (remove for production)
VITE_USE_DUMMY_SALONS=false

# ============================================
# Analytics & Monitoring
# ============================================

# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# App Configuration
# ============================================

# App name
VITE_APP_NAME=SalonHub

# App version
VITE_APP_VERSION=1.0.0

# ============================================
# Notes
# ============================================
# - For development: Use default localhost URLs
# - For production: Update with your domain
# - Keep .env.local in .gitignore
# - Never commit real API keys or credentials
